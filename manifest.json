{
  "manifest_version": 3,
  "name": "GreenStudio Tools",
  "version": "2.0.0",
  "description": "Panel lateral de herramientas de GreenStudio con AI y utilidades de imagen.",
  "permissions": [
    "storage",
    "tabs",
    "history",
    "sidePanel",
    "scripting",
    "geolocation",
    "audioCapture",
    "nativeMessaging"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://router.huggingface.co/*",
    "http://localhost:11434/*",
    "http://127.0.0.1:11434/*"
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost/*",
      "http://127.0.0.1/*",
      "https://*.retool.com/*"
    ]
  },
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "side_panel": {
    "default_path": "panel/panel.html"
  },
  "action": {
    "default_title": "GreenStudio Tools",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "node_modules/@mozilla/readability/Readability.js",
        "src/tab-context/site-handlers/generic-handler.js",
        "src/tab-context/site-handlers/whatsapp-handler.js",
        "src/content-tab-context.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://*.retool.com/*"
      ],
      "js": [
        "src/retool-bridge-content.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://*.retool.com/apps/*"
      ],
      "js": [
        "src/tool-config.js",
        "src/content.js"
      ],
      "run_at": "document_start"
    }
  ]
}
