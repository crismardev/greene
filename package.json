{
  "name": "greene",
  "version": "1.0.0",
  "description": "Extension de Chrome (Manifest V3) para abrir **Greene** en un **side panel**.",
  "scripts": {
    "build:css": "tailwindcss -c tailwind.config.js -i ./panel/tailwind.input.css -o ./panel/tailwind.generated.css --minify",
    "watch:css": "tailwindcss -c tailwind.config.js -i ./panel/tailwind.input.css -o ./panel/tailwind.generated.css --watch",
    "clean:dist": "node ./scripts/clean-dist.mjs",
    "build:dist": "npm run clean:dist && npm run build:css && node ./scripts/build-dist.mjs",
    "build:prod": "npm run build:dist",
    "package:dist": "npm run build:dist && node ./scripts/package-dist.mjs",
    "install:mac": "bash ./scripts/install-mac.sh"
  },
  "keywords": [],
  "author": "",
  "license": "SEE LICENSE IN LICENSE.md",
  "devDependencies": {
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "@neondatabase/serverless": "^1.0.2",
    "@orama/orama": "^3.1.18",
    "@xenova/transformers": "^2.17.2",
    "marked": "^17.0.2"
  }
}
